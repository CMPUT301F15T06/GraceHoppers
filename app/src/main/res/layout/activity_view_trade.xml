<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gracehoppers.jlovas.bookwrm.ViewTradeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Trade"
        android:id="@+id/tradeTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        style="@style/Base.TextAppearance.AppCompat.Headline" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Borrower&apos;s information:"
        android:id="@+id/borrowersInfo"
        android:layout_marginTop="21dp"
        style="@style/Base.TextAppearance.AppCompat"
        android:layout_below="@+id/tradeTitle"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Owner&apos;s Infromation:"
        android:id="@+id/ownersInfo"
        style="@style/Base.TextAppearance.AppCompat"
        android:layout_below="@+id/borrowerBook"
        android:layout_toEndOf="@+id/comments"
        android:layout_marginTop="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/borrowerUsername"
        android:layout_below="@+id/borrowersInfo"
        android:layout_alignStart="@+id/borrowerBook" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/ownerUsername"
        android:layout_below="@+id/ownersInfo"
        android:layout_alignStart="@+id/borrowerBook" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/ownerBook"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/ownerUsername"
        android:layout_alignStart="@+id/ownerUsername" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mark As \n Complete"
        android:id="@+id/completeButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:clickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/borrowerBook"
        android:layout_below="@+id/borrowerUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Comments:"
        android:id="@+id/commentsTitle"
        android:layout_below="@+id/ownerBook"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        style="@style/Base.TextAppearance.AppCompat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/comments"
        android:layout_below="@+id/commentsTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

</RelativeLayout>
