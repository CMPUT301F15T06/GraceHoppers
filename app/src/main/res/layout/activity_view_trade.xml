<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gracehoppers.jlovas.bookwrm.ViewTradeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:text="Trade"
        android:id="@+id/tradeTitle"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout2"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/completeButton"
        android:layout_alignParentStart="true"
        android:background="#afdaff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Comments:"
            android:id="@+id/commentsTitle"
            style="@style/Base.TextAppearance.AppCompat"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:id="@+id/comments"
            android:layout_below="@+id/commentsTitle"
            android:layout_alignParentStart="true"
            android:layout_marginTop="23dp"
            android:text="Comments on the trade " />
    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mark As \n Complete"
        android:id="@+id/completeButton"
        android:clickable="false"
        android:background="#b562b65e"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout"
        android:layout_above="@+id/textView5"
        android:layout_below="@+id/tradeTitle"
        android:background="#ffd5ef">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Owner&apos;s Infromation:"
            android:id="@+id/ownersInfo"
            style="@style/Base.TextAppearance.AppCompat"
            android:layout_gravity="center_horizontal|top"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/frameLayout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/ownerUsername"
            android:layout_gravity="left|top"
            android:text="Owner Username"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/ownersInfo"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/ownerBook"
            android:layout_gravity="left|center_vertical"
            android:text="Owner&apos;s Book"
            android:layout_below="@+id/ownerUsername"
            android:layout_alignParentStart="true" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_above="@+id/frameLayout2"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="175dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/separationLine"
        android:layout_above="@+id/frameLayout2"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/frameLayout"
        android:background="#cfc7ff">

        <TextView
            style="@style/Base.TextAppearance.AppCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Borrower&apos;s Infromation:"
            android:id="@+id/borrowerInfo"
            android:layout_gravity="center_horizontal|top"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/frameLayout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/borrowerUsername"
            android:layout_gravity="left|top"
            android:text="Borrower Username"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/borrowerInfo"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/borrowerBook"
            android:layout_gravity="left|center_vertical"
            android:text="Borrower&apos;s Book"
            android:layout_below="@+id/borrowerUsername"
            android:layout_alignParentStart="true" />
    </FrameLayout>

</RelativeLayout>
