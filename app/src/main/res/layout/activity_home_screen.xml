<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gracehoppers.jlovas.bookwrm.HomeScreen"
    android:id="@+id/icol">

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Add"
        android:id="@+id/addBookButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/profileButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frimageView"
        android:src="@drawable/blackenvelope"
        android:layout_toEndOf="@+id/profileButton"
        android:layout_marginBottom="500dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Home"
        android:id="@+id/homescreentextview"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inventory1"
        android:layout_alignParentStart="true"
        android:smoothScrollbar="true"
        android:layout_above="@+id/TradeHistoryButton"
        android:layout_below="@+id/homescreentextview" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Friends"
        android:id="@+id/friendsButton"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/TradeHistoryButton" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:id="@+id/profileButton"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/addBookButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trade History"
        android:id="@+id/TradeHistoryButton"
        android:layout_above="@+id/friendsButton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/turnCounter"
        android:text="COUNTER"
        android:layout_above="@+id/addBookButton"
        android:layout_toStartOf="@+id/addBookButton" />

</RelativeLayout>
