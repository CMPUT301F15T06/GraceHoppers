<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gracehoppers.jlovas.bookwrm.HomeScreen">

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Add"
        android:id="@+id/addBookButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inventory1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/addBookButton"
        android:smoothScrollbar="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Trade"
        android:id="@+id/tradeButton"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/friendsButton" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Friends"
        android:id="@+id/friendsButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:id="@+id/profileButton"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/tradeButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trade History"
        android:id="@+id/TradeHistoryButton"
        android:layout_above="@+id/tradeButton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/turnCounter"
        android:layout_toRightOf="@+id/TradeHistoryButton"
        android:layout_above="@+id/profileButton"
        android:text="COUNTER"/>

</RelativeLayout>
