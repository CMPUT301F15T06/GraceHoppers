<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gracehoppers.jlovas.bookwrm.AddBookScreen"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add A Book"
        android:id="@+id/titleAddBookText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:textStyle="bold"
        android:textSize="30sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleText"
        android:layout_below="@+id/titleAddBookText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:hint="Title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/authorText"
        android:layout_below="@+id/titleText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:hint="Author" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantityText"
        android:text="1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/categoryDropdown"
        android:entries="@array/category_types"
        android:layout_below="@+id/quantityText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Private Listing"
        android:id="@+id/privateListingCheckbox"
        android:checked="false"
        android:layout_below="@+id/descriptionText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionText"
        android:layout_below="@+id/categoryDropdown"
        android:layout_centerHorizontal="true"
        android:hint="Description of the book (optional)" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/bookImage"
        android:src="@drawable/defaultbook"
        android:maxHeight="150sp"
        android:maxWidth="150sp"
        android:layout_below="@+id/titleAddBookText"
        android:layout_toEndOf="@+id/quantityText" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:id="@+id/okButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/minusButton"
        android:layout_alignBottom="@+id/quantityText"
        android:layout_toEndOf="@+id/titleText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/plusButton"
        android:layout_alignBottom="@+id/quantityText"
        android:layout_alignEnd="@+id/descriptionText" />

</RelativeLayout>
